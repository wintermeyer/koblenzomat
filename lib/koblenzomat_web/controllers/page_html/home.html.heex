<main class="min-h-screen flex flex-col items-center justify-center relative overflow-hidden" aria-label="Koblenz-O-Mat" style="background: url('/images/koblenz-bg.png') center center / cover no-repeat fixed;" aria-hidden="true">
  <!-- Overlay für bessere Lesbarkeit -->
  <div class="absolute inset-0 bg-black/30 z-0" aria-hidden="true"></div>

  <!-- Header -->
  <header class="w-full max-w-4xl mx-auto text-center pt-16 pb-8 z-10 relative">
    <h1 class="text-5xl md:text-7xl font-bold tracking-tight text-white drop-shadow-lg">Koblenz-O-Mat</h1>
    <h2 class="text-2xl md:text-3xl font-semibold mt-2 text-white/80 drop-shadow">Oberbürgermeisterwahl Koblenz 2025</h2>
  </header>

  <!-- Question Card -->
  <section class="bg-white/90 rounded-xl shadow-xl px-8 py-10 max-w-2xl w-full mx-auto flex flex-col items-center relative z-10" aria-labelledby="frage-titel">
    <div class="absolute -top-8 left-1/2 -translate-x-1/2 w-0 h-0 border-l-8 border-r-8 border-b-[32px] border-l-transparent border-r-transparent border-b-white/90" aria-hidden="true"></div>
    <div class="w-full text-left mb-4">
      <span id="frage-titel" class="font-semibold text-base text-slate-800">1/38 Unterstützung der Ukraine</span>
    </div>
    <div class="w-full text-left mb-8">
      <span class="block text-2xl md:text-3xl font-medium text-slate-900 leading-snug">Deutschland soll die Ukraine weiterhin militärisch unterstützen.</span>
    </div>
    <div class="flex flex-col sm:flex-row gap-4 w-full justify-center mb-4" role="group" aria-labelledby="frage-titel">
      <button class="flex-1 bg-cyan-400 hover:bg-cyan-500 text-slate-900 font-semibold py-3 rounded-lg transition focus:outline focus:outline-2 focus:outline-cyan-700" aria-label="Stimme zu">👍 stimme zu</button>
      <button class="flex-1 bg-sky-200 hover:bg-sky-300 text-slate-900 font-semibold py-3 rounded-lg transition focus:outline focus:outline-2 focus:outline-cyan-700" aria-label="Neutral">neutral</button>
      <button class="flex-1 bg-cyan-400 hover:bg-cyan-500 text-slate-900 font-semibold py-3 rounded-lg transition focus:outline focus:outline-2 focus:outline-cyan-700" aria-label="Stimme nicht zu">stimme nicht zu 👎</button>
    </div>
    <div class="w-full text-right">
      <button class="text-slate-500 hover:text-slate-800 font-medium transition underline focus:outline focus:outline-2 focus:outline-cyan-700" aria-label="These überspringen">These überspringen &rarr;</button>
    </div>
  </section>

  <!-- Progress Indicator -->
  <nav aria-label="Frage-Fortschritt" class="absolute bottom-10 left-1/2 -translate-x-1/2 flex gap-2 z-10">
    <ol class="flex gap-2" role="list" aria-label="Frage-Fortschritt">
      <li class="w-3 h-3 bg-white rounded-full inline-block" aria-current="step"><span class="sr-only">Frage 1</span></li>
      <li class="w-3 h-3 bg-white/30 rounded-full inline-block"><span class="sr-only">Frage 2</span></li>
      <li class="w-3 h-3 bg-white/30 rounded-full inline-block"><span class="sr-only">Frage 3</span></li>
      <li class="w-3 h-3 bg-white/30 rounded-full inline-block"><span class="sr-only">Frage 4</span></li>
      <li class="w-3 h-3 bg-white/30 rounded-full inline-block"><span class="sr-only">Frage 5</span></li>
      <li class="w-3 h-3 bg-white/30 rounded-full inline-block"><span class="sr-only">Frage 6</span></li>
      <li class="w-3 h-3 bg-white/30 rounded-full inline-block"><span class="sr-only">Frage 7</span></li>
      <li class="w-3 h-3 bg-white/30 rounded-full inline-block"><span class="sr-only">Frage 8</span></li>
      <li class="w-3 h-3 bg-white/30 rounded-full inline-block"><span class="sr-only">Frage 9</span></li>
      <li class="w-3 h-3 bg-white/30 rounded-full inline-block"><span class="sr-only">Frage 10</span></li>
      <!-- Add more dots as needed for 38 questions -->
    </ol>
  </nav>
</main>
